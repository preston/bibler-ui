{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "app/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "app/app.module.ts",
        "app/components/api.component.ts",
        "app/components/app.component.ts",
        "app/components/bibleBased.component.ts",
        "app/components/bookBased.component.ts",
        "app/components/comparator.component.ts",
        "app/components/home.component.ts",
        "app/components/reader.component.ts",
        "app/components/search.component.ts",
        "app/components/verse.component.ts",
        "app/directives/auto-grow.directive.ts",
        "app/directives/highlight.directive.ts",
        "app/main.ts",
        "app/models/bible.model.ts",
        "app/pipes/humanizeBytes.pipe.ts",
        "app/services/bible.service.ts",
        "app/services/bibler.service.ts",
        "app/services/book.service.ts",
        "app/services/search.service.ts",
        "app/services/testament.service.ts",
        "app/services/verse.service.ts"
    ]
}
